{
  "extends": [
    "../../.eslintrc.json",
    "plugin:mocha/recommended"
  ],
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "expect": "readonly",
    "sinon": "readonly"
  },
  "rules": {
    "func-names": 0,
    "no-console": 0,
    "no-unused-expressions": 0,
    "prefer-arrow-callback": 0,
    "promise/always-return": 0
  }
}
