{
  "include": [
    "index.ts",
    "lib/**/*"
  ],
  "exclude": [
    "tests/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2023"],
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
  }
}
